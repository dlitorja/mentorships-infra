{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    ".turbo",
    "**/*.d.ts",
    "trigger.config.ts",
    "apps",
    "packages",
    "scripts",
    "src",
    "tests"
  ]
}
