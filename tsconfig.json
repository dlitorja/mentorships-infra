{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "files": [],
  "include": [
    "trigger.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    ".turbo",
    "**/*.d.ts"
  ],
  "references": [
    {
      "path": "./apps/web"
    },
    {
      "path": "./packages/db"
    },
    {
      "path": "./packages/payments"
    }
  ]
}
