{
  "name": "mentorships-infra",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @mentorships/web dev",
    "dev:turbo": "pnpm --filter @mentorships/web dev",
    "dev:no-turbo": "pnpm --filter @mentorships/web dev:no-turbo",
    "build": "pnpm --filter @mentorships/web build",
    "start": "pnpm --filter @mentorships/web start",
    "lint": "pnpm --filter @mentorships/web lint",
    "lint:fix": "pnpm --filter @mentorships/web lint --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "check": "pnpm run lint && pnpm run typecheck",
    "check:ci": "pnpm run lint && pnpm run typecheck && pnpm run build",
    "test": "playwright test --config apps/web/playwright.config.mts",
    "test:ui": "playwright test --ui --config apps/web/playwright.config.mts",
    "test:unit": "vitest --config vitest.config.mjs",
    "test:unit:ui": "vitest --ui --config vitest.config.mjs",
    "db:generate": "cd packages/db && drizzle-kit generate",
    "db:migrate": "cd packages/db && drizzle-kit migrate",
    "db:studio": "cd packages/db && drizzle-kit studio"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.40",
    "@ai-sdk/openai": "^2.0.71",
    "@axiomhq/js": "^1.3.1",
    "@clerk/nextjs": "^6.35.5",
    "@google/generative-ai": "^0.24.1",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.81.1",
    "@tanstack/react-form": "^1.27.0",
    "@tanstack/react-query": "^5.90.8",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/zod-form-adapter": "^0.42.1",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.35.6",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "ai": "^5.0.98",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.7",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.555.0",
    "meilisearch": "^0.54.0",
    "next-themes": "^0.4.6",
    "openai": "^6.0.0",
    "react": "19.2.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "19.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.67.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "stripe": "^17.4.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@next/eslint-plugin-next": "^16.0.8",
    "@playwright/test": "1.57.0",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "20.19.25",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-react": "5.1.1",
    "@vitest/ui": "2.1.9",
    "drizzle-kit": "0.31.7",
    "eslint": "9.39.1",
    "eslint-config-next": "16.0.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "happy-dom": "20.0.11",
    "husky": "9.1.7",
    "jsdom": "27.2.0",
    "lint-staged": "16.2.7",
    "tailwindcss": "^3.4.18",
    "typescript": "5.9.3",
    "vitest": "2.1.9"
  },
  "overrides": {
    "esbuild": ">=0.25.0",
    "react": "$react",
    "react-dom": "$react-dom"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "eslint --fix"
    ]
  }
}
